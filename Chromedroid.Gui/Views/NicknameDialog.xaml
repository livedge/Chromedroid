<ui:FluentWindow x:Class="Chromedroid.Gui.NicknameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Edit Device Nickname"
        Width="350" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <TextBlock x:Name="DeviceModelText"
                   FontSize="13" Opacity="0.7"
                   Margin="0,0,0,8" />
        <ui:TextBox x:Name="NicknameTextBox"
                    PlaceholderText="Enter nickname..." />
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <ui:Button Content="Save"
                       Appearance="Primary"
                       Click="Save_Click"
                       Margin="0,0,8,0" />
            <ui:Button Content="Cancel"
                       Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</ui:FluentWindow>
